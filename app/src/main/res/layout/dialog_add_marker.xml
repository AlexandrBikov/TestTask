<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textView_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/putin"/>
    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_title"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/imageView_icon"/>
    <EditText
        android:id="@+id/editText_title"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textView_title"
        app:layout_constraintTop_toBottomOf="@id/imageView_icon"/>

    <TextView
        android:id="@+id/textView_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_subtitle"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textView_title"/>
    <EditText
        android:id="@+id/editText_subtitle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textView_subtitle"
        app:layout_constraintTop_toBottomOf="@id/editText_title"/>
    <TextView
        android:id="@+id/textView_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lat:"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView_subtitle"/>
    <EditText
        android:id="@+id/editText_lat"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textView_lat"
        app:layout_constraintTop_toBottomOf="@id/editText_subtitle"/>
    <TextView
    android:id="@+id/textView_lng"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Lng:"
    android:layout_marginTop="30dp"
    app:layout_constraintTop_toBottomOf="@id/textView_lat"/>
    <EditText
        android:id="@+id/editText_lng"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textView_lng"
        app:layout_constraintTop_toBottomOf="@id/editText_lat"/>
</android.support.constraint.ConstraintLayout>